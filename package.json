{
  "name": "evil_chat",
  "private": true,
  "scripts": {
   "lint-staged": "$(yarn bin)/lint-staged"    
  },
  "lint-staged": {
    "config/webpack/**/*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "frontend/**/*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "frontend/**/*.css": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "dependencies": {
    "@rails/webpacker": "^3.1.1",
    "coffeescript": "^2.1.0",
    "normalize.css": "^7.0.0"
  },
  "devDependencies": {
    "webpack-dev-server": "^2.9.7",
    "babel-eslint": "^8.0.3",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "lint-staged": "^6.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.9.2",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^18.0.0"
  }
}
